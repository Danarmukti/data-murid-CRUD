<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main class="container p-4">
      <h2 class="mb-5"><%= title %></h2>
      <section>
        <table class="table">
          <thead class="table-dark">
            <th>Id</th>
            <th>Nama</th>
            <th>Kelas</th>
            <th>Action</th>
          </thead>
          <% for (let murids of murid) { %>
          <tbody>
            <th><%= murids.id %></th>
            <th><%= murids.nama %></th>
            <th><%= murids.kelas %></th>
            <th class="d-flex">
              <form action="/delete/<%= murids.id %>" method="post">
                <!-- Button trigger modal -->
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal<%= murids.id %>"
                >
                  Delete
                </button>

                <!-- Modal -->
                <div
                  class="modal fade"
                  id="exampleModal<%= murids.id %>"
                  tabindex="-1"
                  aria-labelledby="exampleModalLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                          Konfirmasi Hapus Data
                        </h1>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="modal"
                          aria-label="Close"
                        ></button>
                      </div>
                      <div class="modal-body">
                        Anda Yakin menghapus data
                        <strong><%= murids.nama %></strong>
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">
                          Delete
                        </button>
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-bs-dismiss="modal"
                        >
                          Close
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
              <form action="/edit/<%= murids.id %>" method="post">
                <button
                  type="button"
                  class="btn btn-info"
                  data-bs-toggle="modal"
                  data-bs-target="#Modal<%= murids.id %>"
                  data-bs-whatever="@mdo"
                >
                  Edit
                </button>
                <div
                  class="modal fade"
                  id="Modal<%= murids.id %>"
                  tabindex="-1"
                  aria-labelledby="exampleModalLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                          Edit Data <%= murids.nama %>
                        </h1>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="modal"
                          aria-label="Close"
                        ></button>
                      </div>
                      <div class="modal-body">
                        <div class="mb-3">
                          <label for="nama" class="col-form-label">Nama:</label>
                          <input
                            type="text"
                            name="nama"
                            value="<%= murids.nama %>"
                            class="form-control"
                            id="nama"
                            required
                          />
                        </div>
                        <div class="mb-3">
                          <label for="kelas" class="col-form-label"
                            >Kelas:</label
                          >
                          <input
                            type="text"
                            name="kelas"
                            value="<%= murids.kelas %>"
                            class="form-control"
                            id="kelas"
                            required
                          />
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-bs-dismiss="modal"
                        >
                          Close
                        </button>
                        <button type="submit" class="btn btn-info">Ubah</button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </th>
          </tbody>
          <% } %>
        </table>
      </section>
      <a href="/tambah-murid.ejs" class="btn btn-primary">Tambah Data</a>
      <a href="/" class="btn btn-dark">Back</a>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
